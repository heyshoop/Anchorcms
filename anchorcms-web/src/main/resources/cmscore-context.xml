<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--加载配置文件-->
    <bean id="tplMessageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="cacheSeconds" value="0"/>
        <property name="basenames" value="#{propertyUtils.getList('messages.tpl.')}"/>
    </bean>
    <!--自定义标签-->
    <!--后台权限标签-->
    <bean id="cms_perm" class="com.anchorcms.cms.web.PermistionDirective"/>
    <!--文本字符串处理-->
    <bean id="text_cut" class="com.anchorcms.common.web.freemarker.TextCutDirective"/>
    <!--HTML文本提取并截断-->
    <bean id="html_cut" class="com.anchorcms.common.web.freemarker.HtmlCutDirective"/>
    <!--内容列表-->
    <bean id="cms_content_list" class="com.anchorcms.cms.web.ContentListDirective"/>
    <!--内容分页-->
    <bean id="cms_content_page" class="com.anchorcms.cms.web.ContentPageDirective"/>
    <!--用户管理-->
    <bean id="cmsUserMng" class="com.anchorcms.core.service.impl.CmsUserMngImpl"/>
    <!--统一用户管理-->
    <bean id="unifiedUserMng" class="com.anchorcms.core.service.impl.UnifiedUserMngImpl"/>
    <!--内容服务-->
    <bean id="contentMng" class="com.anchorcms.cms.service.main.impl.ContentMngImpl" />

</beans>